{
  "extends": "@tsconfig/node18/tsconfig.json",
  "version": "4.4.2",
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "target": "ES2022",
    "module": "ES2022"
  },
  "include": ["src/**/*.ts"]
}
